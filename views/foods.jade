script(type="text/html", id="foods_tmpl").            
    .row-fluid.restaurant(data-bind="with: currentRestaurant")
        ul.thumbnails.foodstbody(data-bind="foreach: foods")
            li.span3
                .thumbnail
                    img(data-bind="attr: {src: picture}")
                    b(data-bind='text: name.zh + "(" + name.en + ")"')
                    p(data-bind="text: price")
                    p(data-bind="text: description.zh")
                    p(data-bind="text: description.en")
        
    .buttons(data-bind="with: currentRestaurant")
        p: a.btn.btn-primary(data-bind="click: $root.addFood") New Food

