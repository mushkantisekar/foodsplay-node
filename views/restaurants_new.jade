script(type="text/html", id="restaurants_new_tmpl").
    form.well.form.form-horizontal(method="post", enctype="multipart/form-data",
        data-bind="with: newRestaurant", action="/restaurants/new")

        input(type="hidden", name="_csrf", value="#{csrf_token}")
        input(type="hidden", name="userid", data-bind="value: $root.user()._id")

        .control-group
            label.control-label Name(en)
            .controls
                input(type="text", name="name.en", data-bind="value: name.en", placeholder="name")

        .control-group
            label.control-label Name(zh)
            .controls
                input(type="text", name="name.zh", data-bind="value: name.zh", placeholder="name")

        .control-group
            label.control-label Description(en)
            .controls
                input(type="text", name="description.en", data-bind="value: description.en", placeholder="description")

        .control-group
            label.control-label Description(zh)
            .controls
                input(type="text", name="description.zh", data-bind="value: description.zh", placeholder="description")

        .control-group
            .controls
                button(type="submit", data-bind="enable: $root.newRestaurantValid") Create
