doctype 5
html
    head
        title Foods Play
        link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
        link(rel='stylesheet', href='/stylesheets/style.css')

        script(type="text/javascript", src="/jquery.js")
        script(type="text/javascript", src="/sammy.js")
        script(type="text/javascript", src="/jade.js")
        script(type="text/javascript", src="/jquery.formvalidator.min.js")
        script(type="text/javascript", src="/bootstrap/js/bootstrap.js")

        script(type="text/javascript", src="/knockout-2.2.0.js")
        script(type="text/javascript", src="/knockout.mapping-latest.js")
        script(type="text/javascript", src="/jquery.jeditable.js")

        // config.js is generated resource
        script(type="text/javascript", src="/config.js")
        script(type="text/javascript", src="/js/controllers/validation.js")
        script(type="text/javascript", src="/js/controllers/users_controller.js")
        script(type="text/javascript", src="/js/controllers/orders_controller.js")
        script(type="text/javascript", src="/js/controllers/members_controller.js")
        script(type="text/javascript", src="/js/controllers/foods_controller.js")
        script(type="text/javascript", src="/js/controllers/restaurants_controller.js")
        script(type="text/javascript", src="/js/controllers/admin_controller.js")
        script(type="text/javascript", src="/router.js")

    body
        .navbar.navbar-static-top
            .navbar-inner
                .brand(href='#') Foodsplay
                ul.nav
                    li: a#js-home.active(href='/') Home
                    - if (everyauth.loggedIn && everyauth.user.kind === 3)
                        li: a(href='#/restaurants') Restaurants

                ul.nav.pull-right
                    - if (!everyauth.loggedIn)
                        li: a(href='/users/signin') Login
                    - else
                        li: a(href='#')= user.email
                        li: a(href='/users/logout') Logout

                form.navbar-search.pull-right
                    input.search-query(type='text', placeholder='what you interested in')

        .container-fluid
            block content

        include admin_user
        include businessuser
        include restaurants
        include restaurants_new
        include restaurants_edit
        include restaurant
        include foods
        include orders
        include members
        include foods_new
        include members_new
